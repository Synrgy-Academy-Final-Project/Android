<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resetpassword.NewPasswordDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_white"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/success_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/new_password_title"
            style="@style/OpenSansBold16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_new_password_dialog_title"
            app:layout_constraintEnd_toEndOf="@+id/iv_success"
            app:layout_constraintStart_toStartOf="@+id/iv_success"
            app:layout_constraintTop_toBottomOf="@+id/iv_success" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/new_password_subtitle"
            style="@style/OpenSansRegular14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_new_password_dialog_subtitle"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/new_password_title"
            app:layout_constraintStart_toStartOf="@+id/new_password_title"
            app:layout_constraintTop_toBottomOf="@+id/new_password_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_oke"
            style="@style/ButtonApp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/text_ya"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_password_subtitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>