<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    SPLASH-->
    <style name="Theme.FinalProject.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.FinalProject</item>
    </style>

    <style name="OpenSansTextStyle">
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSansBold16" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenSansBold20" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
