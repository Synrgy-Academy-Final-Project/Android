<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    SPLASH-->
    <style name="Theme.FinalProject.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.FinalProject</item>
    </style>

    <style name="OpenSansTextStyle">
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="OpenSansBold16" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenSansSemiBold14" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EditTextInput">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:textColor">#1C1B1F</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">18.5dp</item>
        <item name="android:paddingBottom">18.5dp</item>
    </style>

    <style name="ButtonApp">
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>