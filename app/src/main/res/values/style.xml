    </style>

    <style name="OpenSansSemiBold16" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenSansSemiBold14" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OpenSansSemiBold12" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OpenSansRegular14" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OpenSansRegular16" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="OpenSansRegular10" parent="OpenSansTextStyle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EditTextInput">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:textColor">#1C1B1F</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">18.5dp</item>
        <item name="android:paddingBottom">18.5dp</item>
    </style>

    <style name="EditTextInputPassenger" parent="EditTextInput">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:textColorHint">@color/neutral_07</item>
        <item name="android:textColor">#1C1B1F</item>
    </style>

    <style name="EditTextEditProfile" parent="EditTextInput">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_rounded_10_stroke_blue</item>
        <item name="android:textColorHint">@color/neutral_07</item>
        <item name="android:textColor">#1C1B1F</item>
    </style>

    <style name="ButtonApp">
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="backgroundTint">@color/btn_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="MyCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <!-- Set the color of the checkbox when it's checked -->
        <item name="colorOnSecondary">@color/neutral_05</item>
        <!-- Set the color of the checkbox when it's not checked -->
        <item name="colorSecondary">@color/neutral_05</item>
        <item name="colorOnSurface">@color/neutral_05</item>
        <!-- Set the thickness of the checkbox -->
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:radius">4dp</item>
    </style>

    <style name="FloatingShapeCircle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FloatingCircle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FloatingShapeCircle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="borderWidth">1dp</item>
    </style>
</resources>