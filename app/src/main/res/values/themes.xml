<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/neutral_01</item>
        <item name="colorPrimaryContainer">@color/primary_light_blue</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark_blue</item>
        <item name="colorSecondary">@color/primary_violet</item>
        <item name="colorOnSecondary">@color/neutral_01</item>
        <item name="colorSecondaryContainer">@color/primary_light_violet</item>
        <item name="colorOnSecondaryContainer">@color/primary_dark_violet</item>

        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Theme.FinalProject" parent="Base.Theme.FinalProject" />

    <style name="TextRegular">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="EditTextInput">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:textColor">#1C1B1F</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">18.5dp</item>
        <item name="android:paddingBottom">18.5dp</item>
    </style>

    <style name="ButtonApp">
        <item name="android:background">@drawable/bg_btn_login</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>